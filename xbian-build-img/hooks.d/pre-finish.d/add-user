
case $config_platform in
    imx6-solidrun)
        USERNAME=solidrun
        PASSWORD=solidrun
        ;;
    *)
        return 0
        ;;
esac

for GG in input audio video; do
    grep -wq $GG /etc/group || groupadd $GG || :
done

mkdir -p /home/$USERNAME

pass=$(printf "import crypt\nprint crypt.crypt('$PASSWORD','SA')" | python)
useradd -G audio,video,users,input,sudo -m -p $pass -s /bin/bash -d /home/$USERNAME $USERNAME

printf "\n------------\nAdded local user $USERNAME with password $PASSWORD\n------------\n"
