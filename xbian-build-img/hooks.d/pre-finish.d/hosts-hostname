
cp ../../../extra-files/hosts ./rootfs/etc/hosts

case $config_platform_branch in
    imx6-solidrun|imx6-trusty)
        echo "imx6" > ./rootfs/etc/hostname
        echo "127.0.0.1			imx6" >> ./rootfs/etc/hosts
        ;;
    *)
        echo "xbian.private" > ./rootfs/etc/hostname
        sed -i 's%<devicename.*>.*</devicename>%<devicename>xbian</devicename>%' /home/xbian/.xbmc/userdata/guisettings.xml ||:
        sed -i 's%<setting id="device_name" value=".*" />%<setting id="device_name" value="xbian" />%' /home/xbian/.xbmc/userdata/peripheral_data/* ||:
        ;;
esac

